<!DOCTYPE html>
<html lang="en">
 <%- include('../partials/head') %>
    <title>Document</title>
 </head> 
<body>
    <%- include('../partials/header') %>


<main class="cont-form">

   <div class="errores">
      <ul></ul>
   </div>

    <form action="/admin/edit/<%= productos.idProducto %>?_method=PUT"  method="POST" class="formulario-registro" enctype="multipart/form-data">

      <h3>Estas editando: <i><%= productos.name %></i></h3>


     <label>Nombre del producto</label>
        <input type="text" name="Name" placeholder="Nombre del producto" class="nombre" value="<%= productos.name %> ">
     
     <label for="comentario">Descripción</label>
        <textarea name="description" id="comentario"><%= productos.description %></textarea>
     <label>Categoría</label>
         <select name="category" class="categoria" placeholder="Seleccione una categoria">
            <option value="" disabled>Seleccione una opción</option>
            <% for(let categoria of categories){ %>
                <option <%= categoria.idcategory == productos.id_category ? "selected" : "" %>  value="<%= categoria.idcategory %>"><%= categoria.name %></option>
            <% } %>
         </select>
     
         <label>Presentación</label>
         <select name="presentation" class="presentacion" placeholder="Seleccione una presentación" >
            <option value="" disabled>Seleccione una opción</option>
            <% for(let presentacion of presentations){ %>
                <option <%= presentacion.idpresentation == productos.id_presentation ? "selected" : "" %> value="<%= presentacion.idpresentation %>"><%= presentacion.name %></option>
            <% } %>
         </select>

     <label>Precio unitario</label>
        <input type="text" name="precio" class="precio" placeholder="Ingrese el precio unitario del producto" value="<%= productos.price%>">

     <label>Descuento</label>
        <input type="text" name="discount" class="descuento" placeholder="Ingrese el descuento, de 0 a 100" value="<%= productos.discount%> ">
     
     <label>Imagen del producto</label>
        <input type="file" name="imagen" accept=".jpg, .png" multiple>   
     
     <button type="submit" class="button">Guardar Cambios</button>
   </form>

   <form action="/admin/delete/<%= productos.idProducto %>?_method=DELETE" method="POST" class="formulario-registro" id="delete-edicion">
    <button type="submit" class="button">ELIMINAR</button>
   </form> 
   
</main>

<%- include('../partials/footer') %>
<script src="/js/product-front-validation.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body> 
</html>